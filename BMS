// RIDERSHIP BAR
new Chart(document.getElementById('ridershipChart'),{
  type:'bar',
  data:{
    labels:['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'],
    datasets:[
      {label:'Men',data:[19,17,19,18,19,18,19,19,19,18,19,19],backgroundColor:'#f4c7a1'},
      {label:'Women',data:[12,11,12,11,12,11,12,12,12,11,12,12],backgroundColor:'#b7d7a8'}
    ]
  },options:{responsive:true,plugins:{legend:{position:'bottom'}}}
});

// DIGITAL TICKETING
new Chart(document.getElementById('ticketChart'),{
  type:'doughnut',
  data:{
    labels:['Pre-printed','ETM','WhatsApp','Mobile App','Bus Pass'],
    datasets:[{data:[34,39,13,3,2]}]
  },options:{plugins:{legend:{position:'bottom'}}}
});

// COMPLAINTS
new Chart(document.getElementById('complaintsChart'),{
  type:'bar',
  data:{
    labels:['Buses','Driver','Conductor','Bus Marshal','Bus Stops'],
    datasets:[
      {label:'Men',data:[183,157,129,64,117],backgroundColor:'#f4c7a1'},
      {label:'Women',data:[362,323,285,150,239],backgroundColor:'#b7d7a8'}
    ]
  },options:{plugins:{legend:{position:'bottom'}}}
});

// DEPOT RIDERSHIP
new Chart(document.getElementById('depotChart'),{
  type:'bar',
  data:{
    labels:Array.from({length:23},(_,i)=>`Depot ${i+1}`),
    datasets:[{label:'Daily Ridership',data:[42000,38000,51000,47000,40000,45000,49000,41000,53000,37000,50000,40500,48000,36000,50000,44000,52000,38000,46000,39000,54000,35000,62000],backgroundColor:'#4a76c9'}]
  },options:{plugins:{legend:{display:false}}}
});
